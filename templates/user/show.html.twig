{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.address }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Temps travaillé (%/mois)</h2>
    <p>{{ goodWorked.timeLength|number_format(2, '.', ',') }}%</p>

    <h2>intervention à venir</h2>
    <table>
        <thead>
        <tr>
            <th>Date de début</th>
            <th>Description rapide</th>
            <th>Description détaillé</th>
            <th>Durée (min)</th>
        </tr>
        </thead>
        <tbody>
        {% for interv in futurIntervention %}
            <tr>
                <td>{{ interv.startDate|date('d-m-Y H:i:s') }}</td>
                <td>{{ interv.smallDescription }}</td>
                <td>{{ interv.fullDescription }}</td>
                <td>{{ interv.timeLength }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>intervention passées</h2>
    <table>
        <thead>
        <tr>
            <th>Date de début</th>
            <th>Description rapide</th>
            <th>Description détaillé</th>
            <th>Durée (min)</th>
        </tr>
        </thead>
        <tbody>
        {% for interv in pastIntervention %}
            <tr>
                <td>{{ interv.startDate|date('d-m-Y H:i:s') }}</td>
                <td>{{ interv.smallDescription }}</td>
                <td>{{ interv.fullDescription }}</td>
                <td>{{ interv.timeLength }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
